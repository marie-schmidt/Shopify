{% include 'breadcrumb' %}
<section id="columns" class="columns-container">
<div class="container wishlist-container page-wishlist">
  <!-- Hero Banner -->
  <div class="wishlist-hero">
    <h1 class="page-header ">{{ page.title }}</h1>
  </div>
  <!-- Product Tile Grid -->
  <div class="wishlist-grid flex row">
    {% paginate collections.all.products by 1000 %} 
    {% for product in collections.all.products %}
      {% include 'product-tile' %}
    {% endfor %}
    {% endpaginate %}
    <div class="wishlist-grid--empty-list flex ">
      <div class="empty-list--info">
        <h6 class="empty-list--text black">Looks like you haven't started a wishlist yet...</h6>
        <a class="btn btn-outline" href="/collections/all">Start Shopping</a>
      </div>
    </div>
  </div>
  <!-- Loader -->
  <div class="wishlist-loader text-center">
    <div class="wishlist-loader--image" ><i class="fa fa-heart-o"></i> Wishlist loading ...</div>
  </div>
</div>
</section>