{%- if section.settings.enable_inwork -%}
<div class="inwork text-center mg-b">
	{%- if section.settings.title_work != blank -%}
		<h3 class="inwork-title title-page">{{section.settings.title_work}}</h3>
	{%- endif -%}
  <div class="inwork-box">
	<div class="row no-margin">
		{%- for block in section.blocks -%}
		
			<div class="col-xs-12 col-sm-{{ block.settings.columns_section }} col-md-{{ block.settings.columns_section }} col-ser">
				{% if block.settings.title != blank %}
	             <h4 class="h3">{{ block.settings.title | escape }}</h4>
	         {% endif %}
	         {% if block.settings.text != blank %}
	              <div class="rte-setting">{{ block.settings.text }}</div>
	         {% endif %}
			</div>
		{%- endfor -%}
	</div>
</div>
</div>
{%- endif -%}
{% schema %}
{
	"name": "Info Work",
	"settings": [
	 {
		 "type": "checkbox",
		 "id": "enable_inwork",
		 "label": "Enable Section",
		 "default":true
	 },
	 {
			"type": "header",
			"content": "------ * Info Work * ------"
	 },
	 {
		 "type": "text",
		 "id": "title_work",
		 "label": "Tittle Info"
	 }
	],
	"blocks": [
    {
      "type": "text",
      "name": "service",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Title column"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text Sub Column",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        },
		    {
          "type": "select",
          "id": "columns_section",
          "label": "Width of the section",
          "options": [
            {
              "value": "1",
              "label": "1\/12 (8.33%)"
            },
            {
              "value": "2",
              "label": "2\/12 (16.67%)"
            },
            {
              "value": "3",
              "label": "3\/12 (25.00%)"
            },
            {
              "value": "4",
              "label": "4\/12 (33.33%)"
            },
            {
              "value": "5",
              "label": "5\/12 (41.67%)"
            },
            {
              "value": "6",
              "label": "6\/12 (50.00%)"
            },
            {
              "value": "7",
              "label": "7\/12 (58.33%)"
            },
            {
              "value": "8",
              "label": "8\/12 (66.67%)"
            },
            {
              "value": "9",
              "label": "9\/12 (75.00%)"
            },
            {
              "value": "10",
              "label": "10\/12 (83.33%)"
            },
            {
              "value": "11",
              "label": "11\/12 (91.67%)"
            },
            {
              "value": "12",
              "label": "12\/12 (100.00%)"
            }
          ],
          "default":"4",
          "info": "Width of the block"
        }
      ]
    }
  ]
}
{% endschema %}
